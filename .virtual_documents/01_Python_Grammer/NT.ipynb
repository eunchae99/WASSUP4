import numpy as np
a = np.arange(15)
print(a)
a = a.reshape(3,5, order='F')     #C:행부터 할당 / F:열부터 할당
print(a)
print(type(a))
print(a.shape) #열과 행
print(a.dtype)
print(a.ndim) # 몇 차원인지
print(a.size) # 개수

